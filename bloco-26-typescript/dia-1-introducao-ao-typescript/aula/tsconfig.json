{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./",
    "outDir": "./dist",
    "module": "CommonJS",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}